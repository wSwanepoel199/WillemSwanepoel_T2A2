<!DOCTYPE html>
<html>
  <head>
    <title>FindATable</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://use.fontawesome.com/releases/v5.7.0/css/all.css',media: 'all', integrity:"sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ", crossorigin:"anonymous"%>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css', media: 'all'%>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme@x.x.x/dist/select2-bootstrap4.min.css', medial: 'all'%>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">
      window.addEventListener('turbolinks:load', () => {
        $('.tags').select2({
          dropdownParent: $('.tags-container'),
          theme: 'bootstrap',
          tags: true,
          tokenSeparators: [','],
          width: 'resolve'
        });
      })
    </script>
  </head>

  <body>
    <%= render "shared/navbar"%>
    <%flash.each do |key, value|%>
      <div class="alert alert-<%=select_flash_key(key)%> alert-dismissible fade show" role="alert">
        <%=value%>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%end%>
    <%if user_signed_in?%>
      <section class="container">
        <div class="col row-col-sm-8 row-col-md-8 row-col-lg-8 d-flex justify-content-center">
          <form action="/search" method="get">
            <div class="form-group">
              <label for="fname">Search</label>
              <input  type="text" id="fname" name="search">
              <input type="submit" value="Search">
              <div class="form-check">
                <input type="radio" id="css" name="css" value="title" checked>
                <label for="css">Name</label>
                <input type="radio" id="css" name="css" value="tag_list">
                <label for="css">Tag</label>
              </div>
            </div>
          </form>
        </div>
      </section>
    <%end%>
    <%= yield %>
  </body>
</html>
