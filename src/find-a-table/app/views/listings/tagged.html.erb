<%if user_signed_in?%>
  <%= render "listings/search_bar"%>
<%end%>
<h1 class="hero-title text-center">Listings</h1>
<section class="container">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4 justify-content-center">
    <%@listing.each do |listing|%>
      <div class="col-md-4 pt-3">
        <div class="card border-dark h-100">
          <% if listing.picture.attached? %>
            <%= image_tag listing.picture, class: "thumbnail card-img top", alt: "#{listing.title} Uploaded Image" %>
          <%else%>
            <%= image_tag "tabletop.jpg", class: "thumbnail card-img top", alt: "Image of Table top" %>
          <%end%>
          <div class="card-body d-flex flex-column">
            <h5><%=listing.title%></h5>
            <p><small>By: <%=listing.username%></small></p>
            <p class="card-text text-secondary flex-fill"><%=truncate(listing.description, length: 50)%></p>
            <p><small>Tag: <%listing.tag_list.each do |tag| %>
              <%= link_to tag, tagged_path(tag: tag) %>
            <%end%></small></p>
            <p class="align-self-end"><%= link_to "Read More", listing_path(listing.id), class:"btn btn-outline-primary"%></p>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</section>