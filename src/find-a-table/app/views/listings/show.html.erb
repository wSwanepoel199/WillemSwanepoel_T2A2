<%if user_signed_in?%>
  <%= render "listings/search_bar"%>
<%end%>
<section class="container d-flex flex-column flex-md-row px-2 my-2 my-md-5">
  <div class="content col-12 col-md-7 col-lg-8 pr-md-3">
    <div class="col-12 p-0 main-preview mb-4">
      <%=image_tag("tabletop.jpg", class: "thumbnail card-img top", alt: "tabletop")%>
    </div>
  </div>
  <div class="sidebar col-lg-4 p-0 mx-2 d-md-block">
    <div class="mb-sm-2 mb-md-5">
      <h1><%=@listing.title%></h1></h1>
      <p><small>By: <%=@listing.username%></small></p>
      <p><small>Tag: <%@listing.tag_list.each do |tag| %>
        <%= link_to tag, tagged_path(tag: tag) %>
      <%end%></small></p>
    </div>
    <div class="container mb-sm-2 mb-md-5">
      <p><%=@listing.description%></p>
    </div>
  </div>
</section>