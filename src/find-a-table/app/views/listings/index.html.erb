<h1>Create Listing</h1>
<div class = "col-md-8 offset-2">
  <% @listing.each do |listing| %>
    <h2><%= listing.title %></h2>
    <p><%= truncate(listing.content, length: 50) %></p>
    <p><small>Tags: <%= raw listing.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small</p>
    <p><%= link_to "View Campaign", listing_path(listing) %></p>
  <% end %>
</div>